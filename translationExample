<!DOCTYPE html>
<html>
<head>
<title>
page title</title>
<style>
#container{
width:200px;
height:200px;
background:green;
position:relative;
}
#box{
width:50px;
height:50px;
background:red;
position:absolute;
}
</style>
</head>
<body>
<div id="container">
<div id="box">
</div>
<script>
window.onload=function(){
var pos=0;
var box=document.getElementById('box');
var t;
var b;
t=setInterval(move,0);

function mBack(){
	if(pos>=0){
		clearInterval(b);
		t=setInterval(mBack,0);
	}else{
		pos-=1;
		box.style.right=pos+'px';
console.log('move left : ' + pos);
	}
}

function move(){
if(pos>=150){
clearInterval(t);
b=setInterval(mBack,0);
}
else{
pos+=1;
box.style.left=pos+'px';
console.log('move right : ' + pos);
}}};
</script>
</body>
</html>
